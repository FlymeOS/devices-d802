        <ImageButton android:id="@id/btn_play" android:background="#00000000" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_gallery_play" android:layout_centerInParent="true" android:contentDescription="@string/play" />
    </RelativeLayout>
    <LinearLayout android:id="@id/layout_attach_button" android:layoutDirection="ltr" style="@style/CommandBarBackground">
        <LinearLayout style="@style/CommandBarSpacer" />
        <Button android:id="@id/btn_cancel" android:text="@string/cancel" style="@style/Postview_CommandBarButton" />
        <LinearLayout style="@style/CommandBarSpacer" />
        <Button android:id="@id/btn_ok" android:text="@string/sp_ok_NORMAL" style="@style/Postview_CommandBarButton" />
        <LinearLayout style="@style/CommandBarSpacer" />
    </LinearLayout>
</RelativeLayout>